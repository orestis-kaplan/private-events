<div class="row">
  <div class="text-center">
    <% if current_user == @user %>
      <h1>Your Events</h1>
    <% else %>
      <h1><%= "#{@user.name}'s Events" %></h1>
    <% end %>
  </div>
  <div class="col-md-6 text-right">
    <h2> Previous </h2>
      <%= render partial: 'shared/scheduled_events', locals: {scheduled_events: @previous_events} %>
  </div>
  <div class="col-md-6 ">
    <h2> Upcoming </h2>
    <%= render partial: 'shared/scheduled_events', locals: {scheduled_events: @upcoming_events} %>
  </div>
</div>
