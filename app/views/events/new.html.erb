<h2>Event Create Form</h2>
<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name,class: 'form-control' %>

  <%= f.label :date %>
  <%= f.date_field :date,class: 'form-control' %><br>

  <%= f.submit 'Create Event',class: 'btn btn-primary' %>

<% end %>
