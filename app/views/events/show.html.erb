<h1>Current event's users</h1>
  <% @event.users.each do |users| %>
      <p><%= users.name %></p>
   <% end %>
   <div class="row">
     <div class="col-md-8 col-md-offset-3">
       <ul>
        <% @users.each do |user| %>
           <li><%= user.name %><%= button_to( "Invite", action: 'invite', controller: "users", id: user.id) %></li>
        <% end %>
       </ul>
     </div>
   </div>
